
<!-- PAGE CONTENT
============================== -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="body-plain__title">
        <h1 class="text-center">Social Media</h1>
      </div>
    </div> 
  </div> <!-- / .row -->
  <div class="row">
          <div class="col-md-8">
          <!-- Categories -->
          <div class="profile__avatar">
            <%= image_tag "buddy.jpg", class: "img-responsive center-block", size: "320x320" %>
            <h4>My Buddy as a Social Media is the place where everyone can register and connect with other users as Buddy. You can post updates, join events with buddies, message them.</h4>
          <h4>Also useful for creative peoples like artist or organizations to create their pages and share their updates with their Buddies.</h4>

          </div>
        </div>
    <div class="col-md-4">
      <div class="body-plain__form">

        <!-- Sign In form -->
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, hide_label: true, id: "sign-in__email", placeholder: "Enter email" %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, hide_label: true, placeholder: "Password", autocomplete: "off" %>
          </div>
          <br>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
            </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary btn-block btn-lg" %>
          </div>
        <% end %>

        <!-- Sign Up link -->
        <hr />
        <p>Not registered?
          <%= link_to "Create an Account.", new_user_registration_path %>
        </p>

        <!-- Lost password form -->
        <p>Lost your password?
          <%= link_to "Click here to recover.", "#lost-password__form", "data-toggle": "collapse", "aria-expanded": "false", "aria-controls": "lost-password__form" %>
        </p>
        <div class="collapse" id="lost-password__form">
          <p class="text-muted">
            Enter your email address below and we will send you a link to reset your password.
          </p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-inline" }) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", id: "lost-password__email", placeholder: "Enter email" %>
            </div>
            <%= f.submit "Send", class: "btn btn-info" %>
          <%end%>
        </div> <!-- lost-password__form -->
      </div> <!-- / .body-plain__form -->
    </div>
  </div> <!-- / .row -->
</div> <!-- / .container -->